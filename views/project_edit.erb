<h3>Update the "<%=@project.project_name() %>" project </h3>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="project_name">Edit the project name here:</label>
  <input id="project_name" name="project_name" type="text">

  <button type="submit">Update</button>
</form>

<span class="return"><p><a href="/employees/<%= @project.employee_id() %>">Click here to go back to previous page</a></p></span>
